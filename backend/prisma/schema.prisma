generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincreament())
  title String 
  author String?
  description String
  category String
  image String
}

model Card {
  board String
  title String
  description String
  author String?
  upvotes Int
  gif String
}
